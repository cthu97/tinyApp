<header>
  <nav class="navbar navbar-expand-md navbar-light" style="background-color:cornflowerblue;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) {%>
      <p class="lead" style="margin-top: 10px;">
        Hello, <%= user.email %>!
      </p>
      <form method="POST" action="/logout">
        <button type="submit" class="btn btn-secondary btn-sm" style="margin-top:12px; margin-left: 10px;">Sign
          out</button>
      </form>
      <%} else { %>
        <form method="GET" action="/login">
          <button type="submit" class="btn btn-secondary">login</button>
        </form>
        
        <form method="GET" action="/register">
          <button type="submit" class="btn btn-secondary">register</button>
        </form>
        <% } %>
  </nav>
</header>